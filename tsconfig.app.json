{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "assets/*": ["./src/assets/*"],
            "router/*": ["./src/router/*"],
            "shared/*": ["./src/shared/*"],
            "stores/*": ["./src/stores/*"],
            "types/*": ["./src/types/*"],
            "views/*": ["./src/views/*"],
            "icons/*": ["./src/shared/icons/*"],
            "common/*": ["./src/shared/common/*"],
        }
    }
}
